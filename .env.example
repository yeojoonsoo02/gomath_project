# 환경 변수 예제 파일
# 이 파일을 .env로 복사하고 실제 값으로 변경하세요

# 데이터베이스
DATABASE_URL=postgresql://gomath:gomath123@localhost:5432/gomath
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=gomath
DATABASE_USER=gomath
DATABASE_PASSWORD=gomath123

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# MinIO 객체 저장소
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=gomath
MINIO_SECRET_KEY=gomath123
MINIO_USE_SSL=false
MINIO_BUCKET=gomath-files

# JWT 토큰
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-key-here
REFRESH_TOKEN_EXPIRES_IN=7d

# API 설정
API_PORT=3001
API_HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# 외부 API
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key

# 웹 애플리케이션
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:3001/graphql
NEXT_PUBLIC_WS_URL=ws://localhost:3001/graphql
NEXT_PUBLIC_MINIO_URL=http://localhost:9000

# 모바일 앱 (Expo)
EXPO_PUBLIC_API_URL=http://localhost:3001/api
EXPO_PUBLIC_GRAPHQL_URL=http://localhost:3001/graphql

# 개발 설정
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_LOGGING=true

# 보안 설정
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# 파일 업로드
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# 이메일 설정 (선택사항)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 소셜 로그인 (선택사항)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# 애널리틱스 (선택사항)
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (에러 추적, 선택사항)
SENTRY_DSN=your-sentry-dsn